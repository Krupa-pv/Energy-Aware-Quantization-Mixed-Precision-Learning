% NeurIPS 2024 Style File
% Simplified version for project reports

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2024}[2024/01/01 NeurIPS 2024 Style]

% Options
\newif\if@final\@finalfalse
\DeclareOption{final}{\@finaltrue}
\DeclareOption{preprint}{\@finalfalse}
\ProcessOptions\relax

% Page layout
\RequirePackage[letterpaper,margin=1in]{geometry}
\RequirePackage{times}
\RequirePackage{fancyhdr}
\RequirePackage{titlesec}
\RequirePackage{natbib}

% Set up fonts
\renewcommand{\rmdefault}{ptm}
\renewcommand{\sfdefault}{phv}

% Title formatting
\titleformat{\section}{\large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalsize\itshape}{\thesubsubsection}{1em}{}

% Spacing
\setlength{\parskip}{0.5em}
\setlength{\parindent}{0em}

% Abstract environment
\renewenvironment{abstract}{%
    \begin{center}
    \begin{minipage}{0.9\textwidth}
    \textbf{Abstract}\par\medskip
    \small
}{%
    \end{minipage}
    \end{center}
    \vspace{1em}
}

% Author formatting
\newcommand{\And}{\end{tabular}\hfil\linebreak[4]\hfil\begin{tabular}[t]{c}}

% Colored rows in tables (optional)
\RequirePackage{colortbl}

% Line numbers for drafts
\if@final
\else
    \RequirePackage{lineno}
    \linenumbers
\fi

\endinput

